@model List<ModelDAO.EF.Subject>

@{
    ViewBag.Title = "Ngân hàng câu hỏi, đề thi";
    ViewBag.Current = "QAndEBankTeacher";
    Layout = "~/Areas/Teacher/Views/Shared/_LayoutTeacher.cshtml";
}

<h5>Ngân hàng câu hỏi, đề thi</h5>

<ol class="breadcrumb breadcrumb-title">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index", "QAndEBankTeacher")">Môn học giảng dạy</a>
    </li>
</ol>

<div class="card">
    <div class="container">
        <div class="row">
            @for (int i = 1; i <= Model.Count(); i++)
            {
                var texthtml = "<div class='col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12'>";
                texthtml += "<div class='card subject'>";
                texthtml += "<a href='" + Url.Action("QuestionsExamsOfSubject", "QAndEBankTeacher", new { codeSubject = Model[i - 1].CodeSubject }) + "'><img class='card-img-top' src='/assets/images/webpage/book-icon.png' alt='Card image' style='width:100px; height:100px'></a>";
                texthtml += "<div class='card-block'>";
                texthtml += "<a href='#'><h5 class='card-title'>" + Model[i - 1].Name + "</h5></a>";
                texthtml += "<p class='card-text description' style='overflow: hidden'>" + Model[i - 1].Description + "</p>";
                texthtml += "<p class='card-text'><small class='text-muted'>Last updated 2 mins ago</small></p>";
                texthtml += "</div>";
                texthtml += "</div>";
                texthtml += "</div>";
                @Html.Raw(texthtml)
            }
        </div>
    </div>
</div>

